<package-info xmlns:smf="http://www.simplemachines.org/" xmlns="http://www.simplemachines.org/xml/package-info">
    <id>BurkeKnight:HPMTiEN</id>
    <name>Hide PM Text in Email Notifications</name>
    <version>1.0</version>
    <type>modification</type>
    <install for="2.0 - 2.0.99">
        <readme parsebbc="true">readme.txt</readme>
        <modification>install.xml</modification>
		<redirect url="?action=admin;area=modsettings" type="inline">Redirecting to Hide PM Text in Email Notifications settings page...</redirect>
    </install>
    <uninstall for="2.0 - 2.0.99">
        <modification reverse="true">install.xml</modification>
    </uninstall>
</package-info>