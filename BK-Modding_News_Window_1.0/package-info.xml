<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
	Package manifest file for BK-Modding News Window

	ATTENTION: If you are trying to install this manually, you should try
	the package manager.  If it will not work for you, please take a look
	at the following for information on this format:
		http://mods.simplemachines.org/docs/manual-install.php

 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">

	<id>BK-Modding:News_Window</id>

	<name>BK-Modding News Window</name>

	<version>2.0</version>

	<type>modification</type>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<modification>modification.xml</modification>
		<require-file name="newtop.jpg" destination="$imagesdir" />
		<require-file name="newmain.jpg" destination="$imagesdir" />
		<require-file name="newbottom.jpg" destination="$imagesdir" />
	</install>

	<uninstall for="2.0 - 2.0.99">
		<modification reverse="true">modification.xml</modification>
    <remove-file name="$imagesdir/newtop.jpg" />
    <remove-file name="$imagesdir/newmain.jpg" />
    <remove-file name="$imagesdir/newbottom.jpg" />
	</uninstall>

</package-info>