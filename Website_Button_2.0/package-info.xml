<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
	Package manifest file for Website Button
 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">

	<id>BurkeKnight:Website</id>

	<name>Website Button</name>

	<version>2.0</version>

	<type>modification</type>

	<install for="2.0 - 2.99">
		<readme parsebbc="true">readme.txt</readme>
		<modification>modification.xml</modification>
		<redirect url="?action=admin;area=modsettings;sa=website" type="inline">Redirecting to Website Button settings page...</redirect>
	</install>

	<uninstall for="2.0 - 2.99">
		<modification reverse="true">modification.xml</modification>
	</uninstall>

</package-info>