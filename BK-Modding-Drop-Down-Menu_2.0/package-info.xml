<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
	Package manifest file for BK-Modding Drop Down Menu

	ATTENTION: If you are trying to install this manually, you should try
	the package manager.  If it will not work for you, please take a look
	at the following for information on this format:
		http://mods.simplemachines.org/docs/manual-install.php

 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">

	<id>BK-Modding:Drop_Down_Menu</id>

	<name>BK-Modding Drop Down Menu</name>

	<version>2.0</version>

	<type>modification</type>

	<install for="2.0 - 2.99">
		<readme parsebbc="true">readme.txt</readme>
		<modification>modification.xml</modification>
		<require-file name="sep_white.png" destination="$themedir/images" />
		<require-file name="sep_black.png" destination="$themedir/images" />
	</install>

	<uninstall for="2.0 - 2.99">
		<modification reverse="true">modification.xml</modification>
		<remove-file name="$themedir/images/sep_white.png" />
		<remove-file name="$themedir/images/sep_black.png" />
	</uninstall>

</package-info>