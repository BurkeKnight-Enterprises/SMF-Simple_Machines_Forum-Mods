<modification xmlns="http://www.simplemachines.org/xml/modification" xmlns:smf="http://www.simplemachines.org/">

	<id>BK-SMF:BK-SMF_News_Stay_Mod</id>

	<version>1.5</version>

	<file name="$themedir/index.template.php">
		<operation>
			<search position="replace"><![CDATA[mainHeader.addTogglePanel("user_section");
		mainHeader.addTogglePanel("news_section");]]></search>
			<add><![CDATA[mainHeader.addTogglePanel("user_section");]]></add>
		</operation>
		<operation>
			<search position="replace"><![CDATA[<div id="news_section" class="titlebg2 clearfix"', empty($options['collapse_header']) ? '' : ' style="display: none;"', '>]]></search>
			<add><![CDATA[<div id="news_section" class="titlebg2 clearfix">]]></add>
		</operation>
	</file>

</modification>